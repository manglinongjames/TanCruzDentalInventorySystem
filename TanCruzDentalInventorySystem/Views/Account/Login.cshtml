@model TanCruzDentalInventorySystem.ViewModel.LoginViewModel
@{
    ViewBag.Title = "";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="TanCruz Inventory System">
    <meta name="author" content="Francis Daray, Erwin Velasquez">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/modernizr")
    @Styles.Render("~/Content/css/login")

</head>
<body class="text-center">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        @*<form class="form-signin">*@
        <img class="mb-4" src="..\..\Content\img\CompanyLogo.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(login => login.UserName, new { @class = "form-control", @placeholder = "Username", @required = "required", @autofocus = "true" })
            @Html.ValidationMessageFor(login => login.UserName, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            @Html.TextBoxFor(login => login.Password, new { @class = "form-control", @type = "password", @required = "true", @placeholder = "Password" })
            @Html.ValidationMessageFor(login => login.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="checkbox mb-3">
                <div class="checkbox">
                    @Html.CheckBoxFor(login => login.RememberMe)
                    @Html.LabelFor(login => login.RememberMe)
                </div>
            </div>
        </div>

        @*<div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>*@
        <div class="form-group">
            <input type="submit" value="Sign in" class="signinBtn btn btn-lg btn-outline-warning btn-block" />
        </div>
        <p class="mt-5 mb-3 text-muted">&copy; 2019 Tan-Cruz Dental Inventory System</p>
    }
</body>
</html>