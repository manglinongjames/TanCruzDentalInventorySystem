@model IEnumerable<TanCruzDentalInventorySystem.ViewModel.UserViewModel>
@{
	ViewBag.Title = "User List";
}

<h2>Users</h2>

<p>
	@Html.ActionLink("Create New", "Register")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.UserName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FirstName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.LastName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.UserStatus)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.UserName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FirstName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.LastName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserStatus)
			</td>

			<td>
				@Html.ActionLink("Edit", "EditUser", new { userId = item.UserId }) |
				@Html.ActionLink("Groups", "UserGroups", new { userId = item.UserId }) |
				@Html.ActionLink("Effective Permissions", "UserPermissions", new { userId = item.UserId })
			</td>
		</tr>
	}
</table>
